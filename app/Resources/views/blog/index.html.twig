{% extends 'base.html.twig' %}

{% block body %}
<div class="blog-header">
    <div class="container">
        <h1 class="blog-title">The Bootstrap Blog</h1>
        <p class="lead blog-description">An example blog template built with Bootstrap.</p>
    </div>
</div>

    <div class="container">
        {% for post in posts %}
            <article>
                <h2>{{ post.title }}</h2>
                <p>
                    {{ post.content|striptags[:50] ~ '...' }} <a href="{{ url('blog-detail', { slug: post.slug }) }}">Read More</a>
                </p>
            </article>
        {% endfor %}
    </div>

{% endblock %}

{% block title %}Blog Posts{% endblock %}
