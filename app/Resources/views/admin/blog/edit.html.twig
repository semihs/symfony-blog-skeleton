{% extends 'admin/base.html.twig' %}

{% block body %}
    <div class="blog-header">
        <div class="container">
            <h1 class="blog-title">The Bootstrap Blog</h1>
            <p class="lead blog-description">An example blog template built with Bootstrap.</p>
        </div>
    </div>

    <div class="container">
        <form method="post" action="">
            <div class="form-group row">
                <label for="form_title" class="col-xs-12 col-sm-2 col-form-label">Title</label>
                <div class="col-xs-12 col-sm-10">
                    <input class="form-control slug-generator" data-slug-target="#form_slug" type="text" id="form_title"
                           name="form[title]" value="{{ post.title }}">
                </div>
            </div>
            <div class="form-group row">
                <label for="form_slug" class="col-xs-12 col-sm-2 col-form-label">Slug</label>
                <div class="col-xs-12 col-sm-10">
                    <input class="form-control" type="text" id="form_slug" name="form[slug]" value="{{ post.slug }}">
                </div>
            </div>
            <div class="form-group row">
                <label for="form_content" class="col-xs-12 col-sm-2 col-form-label">Content</label>
                <div class="col-xs-12 col-sm-10">
                    <textarea class="form-control" id="form_content" name="form[content]" rows="20">{{ post.content|raw }}</textarea>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-xs-12 col-sm-10 offset-sm-2">
                    <input type="submit" class="btn btn-primary"/>
                </div>
            </div>
        </form>
    </div>

{% endblock %}
